---
interface Props {
    title?: string
    sourceUrl?: string
}

const { title = 'BadFL', sourceUrl } = Astro.props

const description = 'document of BadFL (https://pub.dev/packages/bad_fl)'
---

<!doctype html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="description" content={ description }/>
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="icon" type="image/png" href="/favicon.png"/>
        <meta name="generator" content={ Astro.generator }/>
        <title>{title}</title>

        <style>
            * {
                box-sizing: border-box;
            }

            html, body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                font-size: 16px;
                line-height: 1.5;
            }

            img {
                -webkit-user-drag: none;
            }

            code {
                font-family: Menlo,
                Monaco,
                Lucida Console,
                Liberation Mono,
                DejaVu Sans Mono,
                Bitstream Vera Sans Mono,
                Courier New,
                monospace;
            }
        </style>
    </head>
    <body>
        <div class={
            'relative w-full h-[60px] px-8 bg-[linear-gradient(180deg,#13151A_0%,rgba(19,21,26,0.88)_100%)] ' +
            'flex items-center justify-between text-white'
        }>
            <div class="flex items-center space-x-4">
                <a href="/">
                    <img src="/home.svg" width="32" height="32" alt="home">
                </a>

                <span class="text-[24px]">{ title }</span>
                {
                    sourceUrl && (
                        <a href={ sourceUrl } target="_blank" title="View source code">
                            <img src="/code.svg" width="32" height="32" alt="source">
                        </a>
                    )
                }
            </div>
            <div class="flex items-center space-x-4">
                <a href="https://github.com/badlopo/bad_fl" target="_blank" title="View on GitHub">
                    <img src="/github.svg" width="32" height="32" alt="github">
                </a>
                <a href="https://pub.dev/packages/bad_fl" target="_blank" title="View on Pub.dev">
                    <img src="/pub.svg" width="32" height="32" alt="pub">
                </a>
            </div>
        </div>

        <slot/>
    </body>
</html>